html{box-sizing:border-box;font-size:110%}*,:after,:before{box-sizing:inherit}body{backgroun-linear-gradient(#0d2a38 15%,#1a1a1a 85%);color:#fefefe;min-height:100vh;text-align:center;font-family:Roboto,sans-serif}.logo{width:140px}a.featured:hover,a:hover{background-color:##bcbfba;color:#a3a3a2}a{display:block;max-width:400px;margin:0 auto 15px;padding:15px 20px;font-size:.85rem;color:#fefefe;border:2px solid #a3a3a2;text-decoration:none;transition:all .2s ease-in-out}a.featured{position:relative;background-color:#555555;color:#fefefe;font-weight:700}a.featured:before{content:"";position:absolute;top:2px;left:2px;width:calc(100% - 4px);height:calc(100% - 4px);border:2px solid #555555}h2{font-size:14px;text-transform:uppercase;font-weight:400;letter-spacing:2px}.channels{display:flex;max-width:400px;margin:0 auto}.channels a{flex:1;padding:5px 10px;margin-right:10px;background-color:#555555	;border:none}.channels a:last-child{margin-right:0}.channels a:hover{text-decoration:none}
